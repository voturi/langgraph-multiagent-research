# Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to version control

# OpenAI API Configuration (Required for LLM operations)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Tavily Search API (Required for research assistant web search)
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith (Optional - for tracing and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT_NAME=langgraph-multiagent-research
LANGSMITH_TRACING=true

# Database Configuration (Optional - defaults to in-memory)
DATABASE_URL=sqlite:///./app.db

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG_MODE=true

# LangGraph Studio Configuration
STUDIO_PORT=2024
STUDIO_HOST=localhost

# Research Assistant Configuration
MAX_ANALYSTS_DEFAULT=3
MAX_INTERVIEW_TURNS_DEFAULT=3
SEARCH_MAX_RESULTS=5
WIKIPEDIA_MAX_DOCS=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# LLM Trace Logging (for debugging LLM inputs/outputs)
LLM_TRACE_FILE_LOGGING=true
LLM_TRACE_CONSOLE_LOGGING=true
LLM_TRACE_LOG_DIR=./logs/llm_traces
